<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/session_detection_header"
        app:iconSpaceReserved="false">

        <ListPreference
            app:key="@string/key_session_detection_method"
            app:title="@string/session_detection_method"
            app:entries="@array/session_detection_methods"
            app:entryValues="@array/session_detection_methods_values"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="0"
            app:iconSpaceReserved="false" />

        <me.timschneeberger.rootlessjamesdsp.preference.MaterialSwitchPreference
            app:key="@string/key_session_continuous_polling"
            app:title="@string/session_continuous_polling"
            app:defaultValue="false"
            app:summaryOff="@string/session_continuous_polling_off"
            app:summaryOn="@string/session_continuous_polling_on"
            app:iconSpaceReserved="false" />

        <EditTextPreference
            app:key="@string/key_session_continuous_polling_rate"
            app:dependency="session_continuous_polling"
            app:title="@string/session_continuous_polling_rate"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="3000"
            android:inputType="numberSigned|numberDecimal"
            android:digits="0123456789-."
            app:iconSpaceReserved="false" />

        <me.timschneeberger.rootlessjamesdsp.preference.MaterialSwitchPreference
            app:key="@string/key_session_loss_ignore"
            app:title="@string/session_loss_ignore"
            app:defaultValue="false"
            app:summaryOff="@string/session_loss_ignore_off"
            app:summaryOn="@string/session_loss_ignore_on"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>


    <PreferenceCategory app:title="@string/audio_format_header"
        app:iconSpaceReserved="false">
        <ListPreference
            app:key="@string/key_audioformat_encoding"
            app:title="@string/audio_format_encoding"
            app:entries="@array/audio_encodings"
            app:entryValues="@array/audio_encodings_values"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="1"
            app:iconSpaceReserved="false" />
        <me.timschneeberger.rootlessjamesdsp.preference.MaterialSeekbarPreference
            android:key="@string/key_audioformat_buffersize"
            android:title="@string/audio_format_buffer_size"
            android:defaultValue="2048"
            app:seekBarIncrement="128"
            app:precision="0"
            app:unit="@string/audio_format_buffer_size_unit"
            app:labelMinWidth="120dp"
            app:minValue="128"
            app:maxValue="4096"
            app:allowDividerAbove="false"
            app:updatesContinuously="false"
            app:showSeekBarValue="true"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="Auto-start"
        app:iconSpaceReserved="false">
        <me.timschneeberger.rootlessjamesdsp.preference.MaterialSwitchPreference
            app:key="@string/key_autostart_prompt_at_boot"
            app:title="@string/autostart_prompt_at_boot"
            app:defaultValue="true"
            app:summaryOff="@string/autostart_prompt_at_boot_off"
            app:summaryOn="@string/autostart_prompt_at_boot_on"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Power-saving"
        app:iconSpaceReserved="false">
        <me.timschneeberger.rootlessjamesdsp.preference.MaterialSwitchPreference
            app:key="@string/key_powersave_suspend"
            app:title="@string/powersave_suspend"
            app:defaultValue="true"
            app:summaryOff="@string/powersave_suspend_off"
            app:summaryOn="@string/powersave_suspend_on"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/troubleshooting"
        app:iconSpaceReserved="false">
        <Preference
            android:key="@string/key_troubleshooting_dontkillmyapp"
            android:title="@string/troubleshooting_dontkillmyapp"
            android:summary="@string/troubleshooting_dontkillmyapp_summary"
            app:iconSpaceReserved="false" />
        <Preference
            android:key="@string/key_troubleshooting_notification_access"
            android:title="@string/troubleshooting_notification_access"
            android:summary="@string/troubleshooting_notification_access_summary"
            app:iconSpaceReserved="false" />
        <Preference
            android:key="@string/key_troubleshooting_dump"
            android:title="@string/troubleshooting_dump"
            android:summary="@string/troubleshooting_dump_summary"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/privacy"
        app:iconSpaceReserved="false">
        <me.timschneeberger.rootlessjamesdsp.preference.MaterialSwitchPreference
            android:key="@string/key_share_crash_reports"
            android:defaultValue="true"
            android:title="@string/privacy_share_crash_reports"
            android:summaryOn="@string/privacy_share_crash_reports_on"
            android:summaryOff="@string/privacy_share_crash_reports_off"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>

</PreferenceScreen>